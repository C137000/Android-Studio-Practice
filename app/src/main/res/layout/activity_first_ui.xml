<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classwork.firstUi"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"

    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_for_image"
        android:src="@drawable/ktm"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />
    <TextView
        android:id="@+id/NameLabelUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="First Name:"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/nameIdUi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter your Name"
        android:padding="8dp"
        android:background="@drawable/inputfieldborder" />


    <TextView
        android:id="@+id/mylabemailUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"

        android:layout_marginBottom="10dp"
        android:text="Last Name:"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/EmailIDUi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mylabemail"
        android:hint="Enter your last name:."
        android:layout_gravity="center"
        android:padding="8dp"
        android:background="@drawable/inputfieldborder"
        />

    <TextView
        android:id="@+id/Pass1LabelUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="E-mail"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/PassFieldUi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter the Email"
        android:padding="8dp"
        android:background="@drawable/inputfieldborder"/>

    <TextView
        android:id="@+id/Pass2LabelUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"

        android:text="Mobile:"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/PassField2Ui"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="+977 8974826555"
        android:padding="8dp"
        android:background="@drawable/inputfieldborder"/>


    <Button
        android:id="@+id/RegBtnUi"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:text="Save"
        android:background="@drawable/buttonharu"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />


</LinearLayout>