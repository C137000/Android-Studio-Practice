<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableView">

    <TableRow
        android:padding="10dp">
        <TextView android:text="S.N.:"
            android:padding="5dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            />

        <TextView android:text="Full Name:"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="@color/purple_200"/>

        <TextView android:text="Address:"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/purple_200"/>

        <TextView android:text="Phone:"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/purple_200"/>

    </TableRow>

    <TableRow
        android:padding="10dp">
        <TextView android:text="1"
            android:padding="5dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView android:text="Sangam Timalsina"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView android:text="America"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView android:text="9876543210"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </TableRow>



</TableLayout>